# ====================================
# LLMReady Production Environment
# ====================================
# Copy this file to .env and update with your actual values

# ====================================
# APPLICATION SETTINGS
# ====================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING_IN_PRODUCTION
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# ====================================
# DATABASE
# ====================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://llmready_user:STRONG_PASSWORD_HERE@localhost:5432/llmready_prod

# ====================================
# REDIS / CELERY
# ====================================
REDIS_URL=redis://:REDIS_PASSWORD_HERE@localhost:6379/0
CELERY_BROKER_URL=redis://:REDIS_PASSWORD_HERE@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:REDIS_PASSWORD_HERE@localhost:6379/0

# ====================================
# JWT TOKENS
# ====================================
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING_DIFFERENT_FROM_SECRET_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================================
# STRIPE PAYMENT (PRODUCTION)
# ====================================
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Stripe Price IDs (from your Stripe Dashboard)
STRIPE_PRICE_FREE=price_free_tier_id
STRIPE_PRICE_STANDARD=price_1QAaaaBBBcccDDDeee
STRIPE_PRICE_PRO=price_1QAaaaBBBcccDDDeee

# Stripe Success/Cancel URLs
STRIPE_SUCCESS_URL=https://your-domain.com/dashboard/subscription?success=true
STRIPE_CANCEL_URL=https://your-domain.com/dashboard/subscription?canceled=true

# ====================================
# SENDGRID EMAIL
# ====================================
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@your-domain.com
SENDGRID_FROM_NAME=LLMReady

# ====================================
# FRONTEND
# ====================================
FRONTEND_URL=https://your-domain.com

# ====================================
# CORS SETTINGS
# ====================================
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ====================================
# FILE STORAGE
# ====================================
UPLOAD_DIR=/home/llmready/uploads
MAX_UPLOAD_SIZE=104857600

# ====================================
# RATE LIMITING
# ====================================
# Default rate limit for all endpoints
RATE_LIMIT_PER_MINUTE=60

# Authentication endpoints (strict for production security)
# For stress testing, temporarily increase to: RATE_LIMIT_REGISTER_PER_HOUR=100
RATE_LIMIT_REGISTER_PER_HOUR=5     # Registrations per hour per IP
RATE_LIMIT_LOGIN_PER_MINUTE=5      # Login attempts per minute per IP

# Public endpoints
# For stress testing, temporarily increase to: RATE_LIMIT_HEALTH_PER_MINUTE=500
RATE_LIMIT_HEALTH_PER_MINUTE=100   # Health check requests per minute

# ====================================
# MONITORING & LOGGING
# ====================================
# Sentry Error Tracking & Performance Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/llmready/app.log

# ====================================
# SECURITY
# ====================================
# For HTTPS only in production
SECURE_COOKIES=true
SECURE_HSTS_SECONDS=31536000

# ====================================
# OPTIONAL: AWS S3 FOR FILE STORAGE
# ====================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=llmready-prod-files
# AWS_S3_REGION=us-east-1